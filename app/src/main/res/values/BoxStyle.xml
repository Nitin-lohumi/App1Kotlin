<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="upper_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:padding">@dimen/padding1</item>
        <item name="android:layout_marginEnd">@dimen/marginleft</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>
    <style name="LowerButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:padding">@dimen/padding1</item>
        <item name="android:layout_marginEnd">@dimen/marginleft</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>
    <style name="BottomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:padding">@dimen/padding1</item>
        <item name="android:layout_marginEnd">@dimen/marginleft</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>
</resources>